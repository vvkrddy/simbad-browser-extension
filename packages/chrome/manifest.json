{
  "manifest_version": 3,
  "name": "Search SIMBAD",
  "description": "A minimalistic web browser extension that brings the SIMBAD search functionality to wherever you are in the browser.",
  "version": "0.2.0",
  "permissions": ["contextMenus"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon@16px.png",
    "32": "icons/icon@32px.png",
    "48": "icons/icon@48px.png",
    "64": "icons/icon@64px.png",
    "96": "icons/icon@96px.png",
    "128": "icons/icon@128px.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
